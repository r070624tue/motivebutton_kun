<%= render 'shared/header' %>

<div class="container">
  <h2>新しいタスクを作成</h2>
  <div class="form-wrapper">
    <%= form_with model: @task, local: true, html: { id: 'task-form' } do |f| %>
      <div id="tasks-wrapper">
        <div class="task-field">
          <input type="text" name="tasks[][content]" placeholder="タスク内容">
          <button type="button" class="remove-task">削除</button>
        </div>
      </div>

      <div style="display: flex; gap: 1rem; margin-bottom: 1.5rem;">
        <button type="button" id="add-task">追加</button>
        <%= f.submit "登録", class: 'btn-primary', style: 'width: auto; flex-grow: 1;' %>
      </div>
    <% end %>
  </div>
</div>
